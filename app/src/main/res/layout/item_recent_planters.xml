<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_recommended_parent"
    android:layout_width="130dp"
    android:layout_height="180dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/bg_recent_planters"
    android:clickable="true"
    android:elevation="20dp"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_recent_planter_picture"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/item_recent_planter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_recent_planter_picture"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_bold"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Planter"
            android:textColor="@color/dark_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/item_recent_planter_picture"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/item_recent_planter_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/plant_mini"
                android:layout_marginRight="4dp"/>

            <TextView
                android:id="@+id/item_recent_planter_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="10"
                android:textColor="@color/main_light" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_recent_planter_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_recent_planter_name"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/nunito_semi_bold"
            android:text="Country"
            android:textColor="@color/gray"
            android:textSize="11sp"
            tools:ignore="SmallSp" />

    </RelativeLayout>
</RelativeLayout>